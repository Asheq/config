" vrapper bonus mappings:
" gR    rename element
" gc    toggle line-comment
" gr    find all references

let mapleader = ","
let g:mapleader = ","

set ignorecase
set smartcase
set incsearch
set tabstop=4

nnoremap K i<cr><esc>k$
inoremap jj <esc>
nnoremap ,bd :bdelete<cr>
nnoremap ,w  :w<cr>
nnoremap ,d "_d
nnoremap ,pl o<esc>p==
nnoremap ,hs :nohlsearch<cr>
noremap 0 $
noremap 1 ^

nnoremap <m-l> :ls<cr>

"vrapper
nnoremap ,v  :vim<cr>
set autochdir
set saney
set gvimpath=/Users/justin/bin/mvim

