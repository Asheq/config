" vrapper bonus mappings:
" gR    rename element
" gc    toggle comment
" gr    find all references

set ignorecase
set smartcase
set incsearch
set tabstop=4

nnoremap K i<cr><esc>k$
inoremap jj <esc>
nnoremap ,bd :bdelete<cr>
nnoremap ,w  :w<cr>
noremap ,d "_d
nnoremap ,D "_D
nnoremap =p o<esc>p==
nnoremap =P O<esc>p==
nnoremap ,hs :nohlsearch<cr>
noremap - $

nnoremap <m-l> :ls<cr>

" vrapper
" http://evans-stuff.blogspot.com/2007/10/it-seems-that-im-not-only-one-still.html
" https://github.com/vrapper/vrapper/issues/265#issuecomment-22112349

eclipseaction findref org.eclipse.jdt.ui.edit.text.java.search.references.in.workspace
nnoremap gr :findref<cr>

eclipseaction togglebp org.eclipse.debug.ui.commands.ToggleBreakpoint
nnoremap gb :togglebp<cr>

nnoremap ,v  :vim<cr>
set autochdir
set saney
set gvimpath=/Users/justin/bin/mvim

