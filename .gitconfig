[include]
  path = ~/.gitconfig.local
[core]
  ignorecase = false
  autocrlf = false
  excludesfile = ~/.gitexcludes
  # Enable parallel index preload for some operations (diff, status).
  preloadindex = true
[gui]
  gcwarning = false
[branch]
  autosetuprebase = always
[push]
  # default in Git ≥ 2.0
  default = simple
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[i18n]
  filesEncoding = utf-8
[alias]
  l = log --graph --oneline --decorate
  d = diff --stat --color
  s = !git status -sb && git stash list
  co = checkout
[advice]
  statusHints = false
[color]
  # default in Git ≥ 1.8.4
  ui = auto
[color "branch"]
  current   = bold white green
  local     = bold yellow
  remote    = bold magenta
[color "status"]
  # staged changes
  added     = bold green
  updated   = bold white green
  # un-staged changes
  changed   = bold yellow
  untracked = bold cyan
  nobranch  = bold red white
[color "diff"]
  meta = bold cyan
  frag = bold magenta
  old  = bold red
  new  = bold green
[guitool "delete"]
  cmd = rm $FILENAME
  needsfile = yes
  noconsole = yes
[guitool "bash"]
  # try 'start' (Windows), else we are on some sort of unix
  cmd = cd `echo $FILENAME | sed s/[^/]*$//g` && start bash --login &> /dev/null || open -a Terminal &> /dev/null 
  needsfile = yes
  noconsole = yes
[guitool "filemanager"]
  # try 'start' (Windows), else we are on some sort of unix
  cmd = cd `echo $FILENAME | sed s/[^/]*$//g` && start . &> /dev/null || open . &> /dev/null || xdg-open .
  needsfile = yes
  noconsole = yes
[guitool "vim"]
  cmd = source ~/.bashrc && gvim $FILENAME
  noconsole = yes

