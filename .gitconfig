[include]
  path = ~/.gitconfig.local
[core]
  ignorecase = false
  autocrlf = false
  excludesfile = ~/.gitexcludes
  # Enable parallel index preload for some operations (diff, status).
  preloadindex = true
[gui]
  gcwarning = false
[branch]
  autosetuprebase = always
[pull]
  rebase = true
[push]
  default = current
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[i18n]
  filesEncoding = utf-8
[alias]
  #l = log --all --graph --oneline --decorate
  l  = log --graph --pretty=format:'%C(yellow)%h%C(bold white red)%d%Creset %s %C(bold green)%cr %Creset%C(white)%an' --abbrev-commit --date=relative
  ll = !git l --all
  d  = diff --stat --color
  b  = branch
  ba = branch --all
  s  = !git status -sb && git stash list
  co = checkout
  rl = log --walk-reflogs --boundary --pretty=format:\"%ci %h %gd %gs\"
  #open modified files in editor
  em = !vim `git status --porcelain | sed -ne 's/^ M //p'`
[advice]
  statusHints = false
[color]
  # default in Git â‰¥ 1.8.4
  ui = auto
[color "branch"]
  current   = bold white green
  local     = bold yellow
  remote    = bold magenta
[color "status"]
  # staged changes
  added     = bold green
  updated   = bold white green
  # un-staged changes
  changed   = bold yellow
  untracked = bold cyan
  nobranch  = bold red white
[color "diff"]
  meta = bold cyan
  frag = bold magenta
  old  = bold red
  new  = bold green
[guitool "delete"]
  cmd = rm $FILENAME
  needsfile = yes
  noconsole = yes
[guitool "bash"]
  # try 'start' (Windows), else we are on some sort of unix
  cmd = cd `echo $FILENAME | sed s/[^/]*$//g` && start bash --login &> /dev/null || open -a Terminal &> /dev/null 
  needsfile = yes
  noconsole = yes
[guitool "filemanager"]
  # try 'start' (Windows), else we are on some sort of unix
  cmd = cd `echo $FILENAME | sed s/[^/]*$//g` && start . &> /dev/null || open . &> /dev/null || xdg-open .
  needsfile = yes
  noconsole = yes
[guitool "vim"]
  cmd = source ~/.bashrc && gvim $FILENAME
  noconsole = yes
[tig "color"]
  date = cyan default bold
  # commit dot in the revision graph
  graph-commit = cyan default bold
  diff-stat = white default bold

